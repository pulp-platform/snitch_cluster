[
    <% N_TILES = 3 %>

    // Compute cores
    % for j in range(0, 1):
    {
        "thread": "${f'hart_{j}'}",
        "roi": [
        % for i in range(0, N_TILES):
            {"idx": ${2 * i + 1}, "label": "${f'tile_{i}'}"},
        % endfor
        ]
    },
    % endfor

    // DMA core
    {
        "thread": "hart_1",
        "roi": [
            {"idx": 1, "label": "tile_0_in"},
    % for i in range(1, N_TILES):
            {"idx": ${4 * (i - 1) + 3}, "label": "${f'tile_{i}_in'}"},
            {"idx": ${4 * (i - 1) + 5}, "label": "${f'tile_{i-1}_out'}"},
    % endfor
            {"idx": ${4 * (i - 1) + 7}, "label": "${f'tile_{N_TILES-1}_out'}"},
        ]
    }
]
